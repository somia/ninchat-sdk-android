<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ninchat_chat_titlebar_avatar_img"
        android:layout_width="@dimen/ninchat_chat_activity_avatar_size"
        android:layout_height="@dimen/ninchat_chat_activity_avatar_size"
        android:layout_marginEnd="@dimen/ninchat_chat_activity_avatar_margin"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        tools:src="@drawable/ninchat_chat_avatar_left" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ninchat_chat_titlebar_agent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="none"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/ninchat_color_titlebar_text"
            android:textStyle="normal|bold"
            tools:text="User Name" />

        <TextView
            android:id="@+id/ninchat_chat_titlebar_agent_jobtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="none"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/ninchat_color_titlebar_text"
            tools:text="User job title" />
    </LinearLayout>

</LinearLayout>