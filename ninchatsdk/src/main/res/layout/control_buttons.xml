<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ninchat_image_button_previous"
        style="@style/NinchatTheme.Button.Dialog.Close"
        android:layout_width="@dimen/ninchat_chat_control_follow_button_width"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ninchat_icon_back"
        android:tint="@color/ninchat_colorAccent" />

    <ImageView
        android:id="@+id/ninchat_image_button_next"
        style="@style/NinchatTheme.Button.Dialog"
        android:layout_width="@dimen/ninchat_chat_control_follow_button_width"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ninchat_icon_next"
        android:tint="@color/white" />

    <Button
        android:id="@+id/ninchat_button_previous"
        style="@style/NinchatTheme.Button.Dialog.Close"
        android:layout_width="@dimen/ninchat_chat_control_follow_button_width"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:text="Back"
        android:visibility="invisible" />

    <Button
        android:id="@+id/ninchat_button_next"
        style="@style/NinchatTheme.Button.Dialog"
        android:layout_width="@dimen/ninchat_chat_control_follow_button_width"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:text="Continue"
        android:visibility="invisible" />

</RelativeLayout>