<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkbox_simple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ninchat_checkbox_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        style="@style/NinchatTheme.Questionnaire.Checkbox.Image"/>

    <TextView
        android:id="@+id/ninchat_checkbox_label"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="0.9"
        style="@style/NinchatTheme.Questionnaire.Checkbox.Label"
        tools:text="A compound text box label "/>

</LinearLayout>