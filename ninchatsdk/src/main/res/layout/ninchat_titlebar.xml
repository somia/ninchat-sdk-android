<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ninchat_title_bar_height"
    android:background="@color/ninchat_color_modal_background"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ninchat_chat_message_bot_avatar"
        android:layout_width="@dimen/ninchat_chat_activity_avatar_size"
        android:layout_height="@dimen/ninchat_chat_activity_avatar_size"
        android:layout_marginEnd="@dimen/ninchat_chat_activity_avatar_margin"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ninchat_chat_avatar_left" />

    <TextView
        android:id="@+id/ninchat_media_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:autoLink="none"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginEnd="@dimen/ninchat_chat_activity_text_margin"
        android:textColor="@color/ninchat_color_modal_text"
        android:text="Title bar" />

    <View
        android:id="@+id/view_padding"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:visibility="invisible" />

    <Button
        android:id="@+id/ninchat_chat_close"
        style="@style/NinchatTheme.Button.Close.Chat"
        android:layout_width="@dimen/ninchat_close_button_width"
        android:layout_height="@dimen/ninchat_close_button_height"
        android:text="Close"
        android:onClick="onCloseChat" />

</LinearLayout>