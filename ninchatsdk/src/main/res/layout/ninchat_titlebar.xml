<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ninchat_title_bar_height"
    android:background="@color/ninchat_color_modal_background"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ninchat_chat_message_bot_avatar"
        android:layout_width="@dimen/ninchat_chat_activity_avatar_size"
        android:layout_height="@dimen/ninchat_chat_activity_avatar_size"
        android:layout_marginEnd="@dimen/ninchat_chat_activity_avatar_margin"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ninchat_chat_avatar_left" />

    <TextView
        android:id="@+id/ninchat_media_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ninchat_media_activity_top_bar_file_name_margin"
        android:layout_weight="1"
        android:autoLink="none"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="TitleBar title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ninchat_media_activity_top_bar_button_padding">

            <Button
                android:id="@+id/ninchat_chat_close"
                style="@style/NinchatTheme.Button.Close.Chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:onClick="onCloseChat" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>