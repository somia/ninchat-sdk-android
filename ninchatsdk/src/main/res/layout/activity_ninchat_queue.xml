<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NinchatQueueActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ninchat_start_header_background"
        android:paddingTop="70dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="40dp">
        
        <ImageView
            android:id="@+id/title_progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ninchat_progress"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@string/ninchat_queueing"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ninchat_queue_title"
            android:textColor="@color/ninchat_start_text"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ninchat_queue_description"
            android:textColor="@color/ninchat_start_text"
            android:textSize="17sp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ninchat_queue_message"
        android:textSize="17sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>

</LinearLayout>