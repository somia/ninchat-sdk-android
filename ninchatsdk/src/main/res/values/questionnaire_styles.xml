<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NinchatTheme.Questionnaire" parent="@style/NinchatTheme">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/ninchat_colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/ninchat_colorPrimaryDark</item>
        <item name="android:colorAccent">@color/ninchat_colorAccent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ninchat_colorPrimary</item>
        <item name="android:linksClickable">true</item>
        <item name="android:autoLink">all</item>
        <item name="android:textColorLink">@color/ninchat_color_link</item>
        <item name="android:buttonStyle">@style/NinchatTheme.Button</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NinchatTheme.Button.Next" parent="NinchatTheme.MultiChoice">
        <item name="android:background">@drawable/ninchat_chat_primary_button</item>
        <item name="android:textColor">@color/ninchat_color_button_primary_text</item>
    </style>

    <style name="NinchatTheme.Button.Next.Disabled" parent="NinchatTheme.Button.Next">
        <item name="android:background">@drawable/ninchat_chat_disable_button</item>
        <item name="android:textColor">@color/ninchat_color_button_primary_text</item>
    </style>

    <style name="NinchatTheme.Button.Previous" parent="NinchatTheme.MultiChoice">
        <item name="android:background">@drawable/ninchat_chat_secondary_button</item>
        <item name="android:textColor">@color/ninchat_color_button_secondary_text</item>
    </style>

    <style name="NinchatTheme.Button.Previous.Disabled" parent="NinchatTheme.Button.Previous">
        <item name="android:background">@drawable/ninchat_chat_disable_button</item>
        <item name="android:textColor">@color/ninchat_color_button_secondary_text</item>
    </style>

    <style name="NinchatTheme.Button.Disabled" parent="NinchatTheme.MultiChoice">
        <item name="android:background">@drawable/ninchat_chat_disable_button</item>
        <item name="android:textColor">@color/ninchat_color_button_disable_text</item>
    </style>

    <style name="NinchatTheme.Questionnaire.Label" parent="NinchatTheme.Questionnaire">
        <item name="android:textColor">@color/ninchat_color_questionnaire_label_text</item>
        <item name="android:layout_marginBottom">@dimen/ninchat_questionnaire_item_margin_bottom
        </item>
        <item name="android:textSize">@dimen/ninchat_questionnaire_label_text_size</item>
        <item name="android:background">@drawable/ninchat_questionnaire_label</item>
    </style>

    <style name="NinchatTheme.Questionnaire.Label.Disabled" parent="NinchatTheme.Questionnaire.Label">
        <item name="android:textColor">@color/ninchat_color_questionnaire_label_text_disabled</item>
        <item name="android:background">@drawable/ninchat_questionnaire_label_disabled</item>
    </style>

    <style name="NinchatTheme.Questionnaire.Label.Error" parent="NinchatTheme.Questionnaire.Label">
        <item name="android:textColor">@color/ninchat_color_questionnaire_label_text_error</item>
    </style>

    <style name="NinchatTheme.Questionnaire.InputText" parent="NinchatTheme.Questionnaire">
        <item name="android:background">@drawable/ninchat_questionnaire_input_text</item>
        <item name="android:textColor">@color/ninchat_color_questionnaire_input_text</item>
        <item name="android:editTextBackground">@drawable/ninchat_questionnaire_input_text</item>
        <item name="android:textColorHint">
            @color/ninchat_color_questionnaire_input_text_placeholder
        </item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:selectAllOnFocus">false</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="NinchatTheme.Questionnaire.InputText.Focus" parent="NinchatTheme.Questionnaire.InputText">
        <item name="android:background">@drawable/ninchat_questionnaire_input_text_focus</item>
        <item name="android:textColor">@color/ninchat_color_questionnaire_input_text_focus</item>
        <item name="android:editTextBackground">@drawable/ninchat_questionnaire_input_text_focus
        </item>
    </style>

    <style name="NinchatTheme.Questionnaire.InputText.Error" parent="NinchatTheme.Questionnaire.InputText">
        <item name="android:background">@drawable/ninchat_questionnaire_input_text_error</item>
        <item name="android:textColor">@color/ninchat_color_questionnaire_input_text_error</item>
        <item name="android:editTextBackground">@drawable/ninchat_questionnaire_input_text_error
        </item>
    </style>

    <style name="NinchatTheme.Questionnaire.InputText.Cursor" parent="NinchatTheme.Questionnaire">
        <item name="android:colorControlActivated">@color/ninchat_color_questionnaire_input_text_focus</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
    </style>

    <style name="NinchatTheme.Questionnaire.Checkbox.Label" parent="NinchatTheme.Questionnaire">
        <item name="android:textColor">@color/ninchat_color_questionnaire_checkbox_label</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="NinchatTheme.Questionnaire.Checkbox.Label.Focused" parent="NinchatTheme.Questionnaire.Checkbox.Label">
        <item name="android:textColor">@color/ninchat_color_questionnaire_checkbox_label_focused</item>
    </style>

    <style name="NinchatTheme.Questionnaire.Checkbox.Label.Selected" parent="NinchatTheme.Questionnaire.Checkbox.Label">
        <item name="android:textColor">@color/ninchat_color_questionnaire_checkbox_label_selected</item>
    </style>

    <style name="NinchatTheme.Questionnaire.Checkbox.Image" parent="NinchatTheme.Questionnaire">
        <item name="android:src">@drawable/ninchat_chat_checkbox</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="NinchatTheme.Questionnaire.Checkbox.Image.Selected" parent="NinchatTheme.Questionnaire.Checkbox.Image">
        <item name="android:src">@drawable/ninchat_chat_checkbox_selected</item>
    </style>


    <style name="NinchatTheme.Dropdown.Item" parent="Theme.AppCompat.Light">
        <item name="android:divider">@color/ninchat_color_dropdown_unselected_text</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="NinchatTheme.Dropdown.Spinner" parent="Theme.AppCompat.Light">
        <item name="android:dropDownListViewStyle">@style/NinchatTheme.Dropdown.Item</item>
    </style>

    <style name="NinchatTheme.Dropdown.Text" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/ninchat_color_dropdown_unselected_text</item>
    </style>

    <style name="NinchatTheme.Questionnaire.TextView" parent="NinchatTheme.Questionnaire">
        <item name="android:textColor">@color/ninchat_color_questionnaire_textview_text</item>
        <item name="android:layout_marginBottom">@dimen/ninchat_questionnaire_item_margin_bottom
        </item>
        <item name="android:textSize">@dimen/ninchat_questionnaire_textview_text_size</item>
        <item name="android:background">@drawable/ninchat_questionnaire_textview</item>
    </style>

    <style name="NinchatTheme.Questionnaire.TextView.Disabled" parent="NinchatTheme.Questionnaire.TextView">
        <item name="android:textColor">@color/ninchat_color_questionnaire_textview_text_disabled
        </item>
        <item name="android:background">@drawable/ninchat_questionnaire_textview_disabled</item>
    </style>

</resources>