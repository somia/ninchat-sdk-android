<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NinchatTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/ninchat_colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/ninchat_colorPrimaryDark</item>
        <item name="android:colorAccent">@color/ninchat_colorAccent</item>
        <item name="android:actionBarStyle">@style/NinchatTheme.ActionBar.Logo</item>
    </style>

    <style name="NinchatTheme.ActionBar.Logo" parent="android:Widget.Material.ActionBar.Solid">
        <item name="android:homeAsUpIndicator">@drawable/ninchat_logo</item>
        <item name="android:displayOptions">homeAsUp|showTitle</item>
    </style>

</resources>